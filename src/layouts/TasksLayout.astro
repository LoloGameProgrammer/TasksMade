---
import { URL_ROUTES } from "../data/paths";

const { tasks } = Astro.props;
const TASK_ROUTE = URL_ROUTES.TASKS;
---

<slot name="Title" />
<article>
    {
        tasks?.map(({ title, number }) => {
            return (
                <a href={`${TASK_ROUTE}/${number}`}>
                    {number}.{title}
                </a>
            );
        })
    }
</article>

<style>
    article {
        display: flex;
        flex-direction: column;
    }
    a{
        text-decoration: underline;
    }
</style>
