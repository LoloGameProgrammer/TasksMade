---
const props = Astro.props;
const { title, number, creator, state, assignees = ["Lolo", "Pepe"] } = props;
---

<section>
    <header>
        <h1>{number}</h1>
        <h2>{title}</h2>
    </header>
    <p>Owner : {creator}</p>
    Assignees : {assignees.map((assignee: String) => <p>{assignee}</p>)}
</section>

<style>
    header {
        display: flex;
        flex-direction: row;
        gap: 0.5rem;
    }
</style>
